{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 10",

  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018"],
    "module": "commonjs",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "files": ["my-server.ts"]
}
